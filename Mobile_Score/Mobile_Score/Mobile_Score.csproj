    <PackageReference Include="Syncfusion.Xamarin.SfTabView" Version="22.1.34" />
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2196" />  
    <PackageReference Include="Xamarin.Essentials" Version="1.7.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resource\Style\ButtonColorStyle.xaml.cs">
      <DependentUpon>ButtonColorStyle.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\LecturerPage.xaml.cs">
      <DependentUpon>LecturerPage.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resource\Fonts\FluentIcons.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
